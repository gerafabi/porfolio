---
import { getTranslations } from '../utils/translations';

const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';
const t = getTranslations(lang);
---

<section id="about" class="py-20 bg-gradient-to-b from-black to-gray-900">
  <div class="container mx-auto px-6">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        
        
        <div class="relative">
          <div class="relative z-10">
            <div class="aspect-square bg-gradient-to-br from-green-400/20 to-blue-500/20 rounded-3xl p-8 border border-gray-800">
              <div class="w-full h-full bg-gradient-to-br from-gray-900 to-black rounded-2xl flex items-center justify-center">
                <div class="text-center">
                  <div class="w-36 h-36 mx-auto mb-6 rounded-full overflow-hidden border-4 border-green-400 shadow-lg">
                    <img src="/fotogera.jpg" alt="Gerardo Marcovics" class="w-full h-full object-cover" />
                  </div>
                  <h3 class="text-2xl font-bold text-white mb-2">{t.about.greeting}</h3>
                  <p class="text-gray-400">{t.about.nickname}</p>
                </div>
              </div>
            </div>
          </div>
          
          
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-r from-green-400 to-blue-500 rounded-full opacity-20 animate-pulse"></div>
          <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-gradient-to-r from-purple-400 to-pink-500 rounded-full opacity-20 animate-pulse" style="animation-delay: 1s;"></div>
        </div>
        
        
        <div>
          <h2 class="text-5xl md:text-6xl font-black mb-8">
            <span class="bg-gradient-to-r from-green-400 to-blue-500 bg-clip-text text-transparent">
              {t.about.title}
            </span>
          </h2>
          
          <div class="space-y-6 text-gray-300 leading-relaxed">
            <p class="text-lg">
              {t.about.description1}
            </p>
            
            <p>
              {t.about.description2}
            </p>
            
            <p>
              {t.about.description3}
            </p>
          </div>
          
          
          <div class="mt-12">
            <h3 class="text-2xl font-bold text-white mb-6">{t.about.mainTechnologies}</h3>
            <div class="skills-grid grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-blue-500/20 to-blue-500/5 text-blue-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="2"/>
                    <ellipse cx="12" cy="12" rx="10" ry="4"/>
                    <ellipse cx="12" cy="12" rx="10" ry="4" transform="rotate(60 12 12)"/>
                    <ellipse cx="12" cy="12" rx="10" ry="4" transform="rotate(120 12 12)"/>
                  </svg>
                </div>
                <span class="skill-label">React</span>
              </div>
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-emerald-500/20 to-emerald-500/5 text-emerald-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 10l8-6 8 6v8a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2z"/>
                    <path d="M9 22V12h6v10"/>
                  </svg>
                </div>
                <span class="skill-label">Nest.js</span>
              </div>
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-sky-500/20 to-sky-500/5 text-sky-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="4" y="4" width="16" height="16" rx="3"/>
                    <path d="M8 16V8l8 8V8"/>
                  </svg>
                </div>
                <span class="skill-label">TypeScript</span>
              </div>
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-purple-500/20 to-purple-500/5 text-purple-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M14 3l7 7-8 8-7-7z"/>
                    <path d="M5 19l4-1-3-3-1 4z"/>
                    <path d="M15 7l2 2"/>
                  </svg>
                </div>
                <span class="skill-label">Astro</span>
              </div>
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-emerald-500/20 to-emerald-500/5 text-emerald-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 7h18"/>
                    <path d="M6 3h12v18H6a3 3 0 0 1-3-3V6a3 3 0 0 1 3-3z"/>
                  </svg>
                </div>
                <span class="skill-label">Node.js</span>
              </div>
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-teal-500/20 to-teal-500/5 text-teal-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <ellipse cx="12" cy="5" rx="8" ry="3"/>
                    <path d="M4 5v6c0 1.7 3.6 3 8 3s8-1.3 8-3V5"/>
                    <path d="M4 11v6c0 1.7 3.6 3 8 3s8-1.3 8-3v-6"/>
                  </svg>
                </div>
                <span class="skill-label">PostgreSQL</span>
              </div>
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-cyan-500/20 to-cyan-500/5 text-cyan-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 19l16-4-8-2-8 2v4z"/>
                    <path d="M12 13V3"/>
                  </svg>
                </div>
                <span class="skill-label">Tailwind CSS</span>
              </div>
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-rose-500/20 to-rose-500/5 text-rose-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 12a9 9 0 0 1 14.7-6.7L20 8"/>
                    <path d="M21 12a9 9 0 0 1-14.7 6.7L4 16"/>
                  </svg>
                </div>
                <span class="skill-label">REST APIs</span>
              </div>
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-orange-500/20 to-orange-500/5 text-orange-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 16V8a2 2 0 0 0-1-1.73L13 2.27a2 2 0 0 0-2 0L4 6.27A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                  </svg>
                </div>
                <span class="skill-label">Git</span>
              </div>
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-pink-500/20 to-pink-500/5 text-pink-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M2 12h20"/>
                    <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                  </svg>
                </div>
                <span class="skill-label">HTML/CSS</span>
              </div>
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-indigo-500/20 to-indigo-500/5 text-indigo-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M20 17.5A4.5 4.5 0 0 0 16 9h-1.3A7 7 0 1 0 4 19h12a4 4 0 0 0 4-1.5z"/>
                  </svg>
                </div>
                <span class="skill-label">Cloud Deploy</span>
              </div>
              <div class="skill-item">
                <div class="skill-icon bg-gradient-to-b from-slate-500/20 to-slate-500/5 text-slate-300">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="9"/>
                    <path d="M7.5 8.5l2.2 7.2c.2.7.9 1.3 1.7 1.3 1 0 1.8-.8 1.8-1.8 0-.4-.1-.7-.2-1l-1.7-5.7"/>
                    <path d="M16.5 15.5c.7-1.2 1.1-2.6 1.1-4 0-1.8-.6-3.4-1.7-4.7"/>
                    <path d="M13.5 8.5c.4 1.1.7 2.3.7 3.5 0 1.5-.4 2.9-1.1 4.1"/>
                  </svg>
                </div>
                <span class="skill-label">WordPress</span>
              </div>
            </div>
          </div>
          
          
          <div class="mt-12 flex flex-col sm:flex-row gap-4">
            <a href="#contact" class="flex items-center justify-center space-x-2 px-8 py-4 bg-gradient-to-r from-green-400 to-blue-500 text-black font-bold rounded-lg hover:scale-105 transition-all duration-300 glow">
              <span>{t.about.contact}</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
            
            <a href="#projects" class="flex items-center justify-center space-x-2 px-8 py-4 border-2 border-white/20 text-white font-semibold rounded-lg hover:border-green-400 hover:text-green-400 transition-all duration-300 backdrop-blur-sm">
              <span>{t.about.viewProjects}</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skills-grid {
    grid-auto-rows: minmax(80px, auto);
    align-items: stretch;
  }
  .skill-item { }
  .skill-item:hover { transform: none; }
</style>
<style>
  .skill-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    padding: 14px 16px;
    border-radius: 14px;
    background: linear-gradient(180deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0.01) 100%);
    border: 1px solid rgba(148,163,184,0.25);
    box-shadow:
      0 1px 1px rgba(0,0,0,0.25) inset,
      0 8px 24px rgba(0,0,0,0.35),
      0 0 0 2px rgba(255,255,255,0.02) inset;
    transition: transform .25s ease, box-shadow .25s ease, border-color .25s ease;
    min-height: 80px;
    width: 100%;
    min-width: 100px;
    position: relative;
    z-index: 0;
  }
  .skill-item:hover { 
    transform: none;
    border-color: rgba(34,197,94,0.45);
    box-shadow:
      0 1px 1px rgba(0,0,0,0.25) inset,
      0 14px 36px rgba(0,0,0,0.45),
      0 0 0 2px rgba(34,197,94,0.15) inset,
      0 0 24px rgba(34,197,94,0.08);
  }
  .skill-icon { display: none; }
  .skill-label {
    color: #e5e7eb;
    font-weight: 600;
    font-size: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
    word-break: normal;
    overflow-wrap: anywhere;
    hyphens: manual;
    line-height: 1.25;
    flex: 0 1 auto;
    text-align: center;
  }
</style>
