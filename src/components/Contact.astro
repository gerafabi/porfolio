                  </svg>
                </div>
                <div>
                  <h4 class="text-white font-semibold">WhatsApp</h4>
                  <a href="https://wa.me/543764287394" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-green-400 transition-colors">+54 376 428-7394</a>
                </div>
              </div>
            </div>
            
            
            <div class="bg-gradient-to-r from-green-400/10 to-blue-500/10 border border-green-400/30 rounded-2xl p-6">
              <div class="flex items-center space-x-3 mb-4">
                <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                <h4 class="text-white font-semibold">{t.contact.availableForProjects}</h4>
              </div>
              <p class="text-gray-400 text-sm">
                {lang === 'es' 
                  ? 'Actualmente estoy disponible para proyectos freelance y colaboraciones. Horario de respuesta: 10am a 20pm (Argentina).'
                  : 'I am currently available for freelance projects and collaborations. Response time: 10am to 8pm (Argentina).'
                }
              </p>
            </div>
            
            
            <div class="grid grid-cols-2 gap-4">
              <div class="text-center p-4 bg-gray-800/50 rounded-lg border border-gray-700">
                <div class="text-lg font-bold text-green-400 mb-1" id="argentina-time"></div>
                <div class="text-gray-400 text-xs">{lang === 'es' ? 'Hora Argentina' : 'Argentina Time'}</div>
              </div>
              <div class="text-center p-4 bg-gray-800/50 rounded-lg border border-gray-700">
                <div class="text-lg font-bold text-blue-400 mb-1">10am - 20pm</div>
                <div class="text-gray-400 text-xs">{t.contact.responseTime}</div>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</section>

<script>
  
  document.querySelectorAll('.contact-method').forEach(method => {
    method.addEventListener('mouseenter', () => {
      method.style.transform = 'translateY(-2px)';
    });

    method.addEventListener('mouseleave', () => {
      method.style.transform = 'translateY(0)';
    });
  });

  
  function updateArgentinaTime() {
    const argentinaTimeElement = document.getElementById('argentina-time');
    if (!argentinaTimeElement) return;

    const now = new Date();
    
    const argentinaTime = new Intl.DateTimeFormat('es-AR', {
      timeZone: 'America/Argentina/Buenos_Aires',
      hour: '2-digit',
      minute: '2-digit',
      second: '2-digit',
      hour12: false
    }).format(now);

    argentinaTimeElement.textContent = argentinaTime;
  }

  
  updateArgentinaTime();
  setInterval(updateArgentinaTime, 1000);
</script>
